<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#ffffff">


    <TextView
        android:id="@+id/tvDayNameHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18dp"
        android:text="10 - 20"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnWorkHour8_00"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/button_work_hours_available"
                android:text="08:00 - 10:00"
                android:textColor="@color/blue"
                android:textSize="16dp" />
            <Button
                android:id="@+id/btnWorkHour10_00"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="10:00 - 12:00"
                android:layout_gravity="center"
                android:background="@drawable/button_work_hours_available"
                android:layout_margin="10dp"
                android:textSize="16dp"
                android:textColor="@color/blue"
                />
            <Button
                android:id="@+id/btnWorkHour12_00"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="12:00 - 14:00"
                android:layout_gravity="center"
                android:background="@drawable/button_work_hours_available"
                android:layout_margin="10dp"
                android:textSize="16dp"
                android:textColor="@color/blue"
                />

            <Button
                android:id="@+id/btnWorkHour14_00"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="14:00 - 16:00"
                android:layout_gravity="center"
                android:background="@drawable/button_work_hours_available"
                android:layout_margin="10dp"
                android:textSize="16dp"
                android:textColor="@color/blue"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_weight="1">

            <Button
                android:id="@+id/btnWorkHour16_00"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="16:00 - 18:00"
                android:layout_gravity="center"
                android:background="@drawable/button_work_hours_available"
                android:layout_margin="10dp"
                android:textSize="16dp"
                android:textColor="@color/blue"
                />

            <Button
                android:id="@+id/btnWorkHour18_00"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="18:00 - 20:00"
                android:layout_gravity="center"
                android:background="@drawable/button_work_hours_available"
                android:layout_margin="10dp"
                android:textSize="16dp"
                android:textColor="@color/blue"
                />
            <Button
                android:id="@+id/btnWorkHour20_00"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="20:00 - 22:00"
                android:layout_gravity="center"
                android:background="@drawable/button_work_hours_available"
                android:layout_margin="10dp"
                android:textSize="16dp"
                android:textColor="@color/blue"
                />

            <Button
                android:id="@+id/btnWorkHourClosed"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="All day"
                android:layout_gravity="center"
                android:background="@drawable/button_work_hours_unavailable"
                android:layout_margin="10dp"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>