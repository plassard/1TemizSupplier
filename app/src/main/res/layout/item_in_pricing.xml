<?xml version="1.0" encoding="utf-8" ?>


    <!-- Top View,  Row itemView of RecyclerView -->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_title"
                style="@style/CharcoalSmallText"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:singleLine="false"
                android:text="Camp shirt "
                android:textAlignment="textStart"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/ivInfo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/information_icon"
                android:layout_toLeftOf="@+id/tv_currency"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                />


            <TextView
                android:id="@+id/tv_currency"
                style="@style/CharcoalSmallText"
                android:background="@drawable/black_borders_rectangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_toLeftOf="@+id/et_price"
                android:layout_centerVertical="true"
                android:textAlignment="textEnd"
                android:text="â‚º"
                android:textSize="16dp"/>

            <EditText
                android:id="@+id/et_price"
                style="@style/CharcoalSmallText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/black_borders_rectangle"
                android:padding="5dp"
                android:text=""
                android:textAlignment="textEnd"
                android:textSize="16dp" />
        </RelativeLayout>


        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="1dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/gray"/>
    </RelativeLayout>

