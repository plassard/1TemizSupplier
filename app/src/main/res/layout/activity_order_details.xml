<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/iv_toolbar_close"
            android:layout_toLeftOf="@+id/nc_notification_count"
            android:layout_toRightOf="@+id/iv_toolbar_close"
            android:layout_toStartOf="@+id/nc_notification_count"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_inside_title"
                style="@style/Toolbar.TitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/order_details_title"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/tv_inside_sub_title"
                style="@style/Toolbar.SubtitleXXSmallGrayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                tools:text="#54876"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_toolbar_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:src="@drawable/svg_ic_arrow_left_back_24dp"/>



    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_container"
        android:layout_below="@+id/toolbar_container"
        android:paddingEnd="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingStart="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_content"
                style="@style/CardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <include layout="@layout/include_order_details_content"/>
                    </FrameLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tv_under_content_link"
                style="@style/AccentLargeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_content"
                android:layout_centerHorizontal="true"
                android:padding="16dp"
                tools:text="@string/order_details_button_cancel_drop_off"/>

            <TextView
                android:id="@+id/tv_paid_status"
                style="@style/GreenLargeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_under_content_link"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/svg_ic_in_time_green_16dp"
                android:paddingBottom="16dp"
                android:text="@string/order_details_paid"
                android:visibility="gone"
                tools:visibility="visible"/>
        </RelativeLayout>
    </ScrollView>

    <View
        android:id="@+id/v_shadow"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_above="@+id/ll_container"
        android:background="@drawable/shadow"/>

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_drop_off_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingEnd="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/rl_summary_products_info_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingEnd="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingStart="12dp">

                <View
                    android:id="@+id/v_center_bottom"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/tv_bottom_quantity"
                    style="@style/CharcoalXSmallText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/v_center_bottom"
                    android:layout_toStartOf="@+id/v_center_bottom"
                    android:maxLines="3"
                    tools:text="9 items"/>

                <TextView
                    android:id="@+id/tv_bottom_price"
                    style="@style/RadicalRedXSmallText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    tools:text="Total price: $16"/>

            </RelativeLayout>

            <Button
                android:id="@+id/b_receive_payment"
                style="@style/TemizButton"
                android:layout_width="match_parent"
                android:layout_margin="12dp"
                android:text="OK"
                android:textAllCaps="false"/>
        </LinearLayout>

        <Button
            android:id="@+id/b_add_items"
            style="@style/TemizButton"
            android:layout_width="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:text="@string/order_details_button_add_items"
            android:textAllCaps="false"/>

    </LinearLayout>
</RelativeLayout>

