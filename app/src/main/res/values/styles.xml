<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>


    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_toolbar</item>
        <item name="android:textColor">@color/charcoal</item>
    </style>


    <style name="CardViewStyle">
        <item name="cardCornerRadius">7dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardElevation">0dp</item>
        <item name="android:translationZ" tools:targetApi="lollipop">0dp</item>
    </style>


    <style name="MainMenuCardContentStyle">
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">16dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">24dp</item>
    </style>


    <style name="CharcoalXLargeText">
        <item name="android:textColor">@color/textCharcoal</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

    <style name="Charcoal40XXSmallText">
        <item name="android:textColor">@color/textCharcoal40</item>
        <item name="android:textSize">@dimen/text_size_xxsmall</item>
    </style>


    <style name="AccentXXSmallText">
        <item name="android:textColor">@color/textColorAccent</item>
        <item name="android:textSize">@dimen/text_size_xxsmall</item>
    </style>

    <style name="CharcoalMediumText">
        <item name="android:textColor">@color/textCharcoal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Charcoal40XSmallText">
        <item name="android:textColor">@color/textCharcoal40</item>
        <item name="android:textSize">@dimen/text_size_xsmall</item>
    </style>

    <style name="FernXXXSmallText">
        <item name="android:textColor">@color/textColorFern</item>
        <item name="android:textSize">@dimen/text_size_xxxsmall</item>
    </style>

    <style name="CharcoalSmallText">
        <item name="android:textColor">@color/textCharcoal</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TemizButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/button_rounded_pink</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TabTitleCounter">
        <item name="android:textSize">@dimen/text_size_xxsmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textAshGrey</item>
    </style>

    <style name="TabTitleText">
        <item name="android:textSize">@dimen/text_size_xxsmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textCharcoal</item>
    </style>

    <style name="TextFieldOrderTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">50</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/textCharcoal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CharcoalXSmallText">
        <item name="android:textColor">@color/textCharcoal</item>
        <item name="android:textSize">@dimen/text_size_xsmall</item>
    </style>

</resources>
